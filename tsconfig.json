{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["es2018", "esnext.asynciterable"],
        "module": "commonjs",
        "types": ["reflect-metadata", "node", "jest"],
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": ["lib/**/*.ts"],
    "exclude": ["node_modules", "dist", "tests/**/*.ts"],
    "baseUrl": "lib",
    "buildOnSave": true,
    "compileOnSave": true
}
